  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.6.0",
    "@actions/github": "^5.0.0",
    "@actions/io": "^1.1.2",
    "@actions/tool-cache": "^1.7.2"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.33.3",
    "rome": "^0.7.0-next"
  },
  "engines": {
    "node": "16.*.*"
  }
}
